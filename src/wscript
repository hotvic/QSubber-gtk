#! /bin/env python
# encoding: utf-8

def configure(ctx):
    pass

def build(bld):
    bld(
            features         = 'c cprogram glib2',
            use              = 'GTK3 SOUP',
            packages         = 'gtk+-3.0 libsoup-2.4',
            source           = 'main.vala config.vala qsubber-application.vala qsubber-window.vala qsubber-opensubtitles.vala org.imvictor.qsubber.gresource.xml',
            target           = 'qsubber',
            vala_resources   = 'org.imvictor.qsubber.gresource.xml',
            vala_target_glib = '2.38'
    )
